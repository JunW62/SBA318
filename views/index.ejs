<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <title>Inventory</title>
  </head>
  <body>
    <div class="container">
      <ul>
        <% if (users && users.length) { %> <% users.forEach(user => { %> <% if
        (user.id === 1) { %>
        <!-- Check if this is user 1 -->
        <li>
          <h1>Welcome <%= user.name %></h1>
          <a class="edit" href="/edit-user/<%= user.id %>">Change User</a>
          <a id="newPostBtn" href="/new-user">New User</a>
          <a href="/delete-user/<%= user.id %>">Edit Profile</a>
        </li>
        <% } %> <% }); %> <% } else { %>
        <li>No users found.</li>
        <% } %>
      </ul>
    </div>

    <div class="container">
      <h1>My Inventory</h1>
      <a id="newPostBtn" href="/new">New Product</a>
      <ul id="postsList">
        <% products.forEach(product=> { %>
        <li>
          <h2>
            <%=product.name%>
          </h2>
          <small>
            <%=product.date %>
          </small>
          <p>
            <%=product.description%>
          </p>
          <small>Price: <%=product.price%> $</small>
          <small>Quantity: <%=product.quantity%> </small>
          <a class="edit" href="/edit/<%= product.id %>">Edit</a>
          <a class="delete" href="/api/products/delete/<%= product.id %>"
            >Delete</a
          >
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
